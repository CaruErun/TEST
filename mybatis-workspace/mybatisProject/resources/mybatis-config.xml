<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
  
  <!-- 
  	이 문서의 형식이 configuration(==환경설정)임을 알리기 위한 DOCTYPE
  	
  	DTD : 유효성 체크(이 페이지에 있는 태그들이 configuration 태그 안에 존재해도 되는지 유효성 체크)
  	
  
   -->
   
   <configuration>
   
   <!-- settings " Mybatis 구동 시 선언할 설정들을 작성하는 태그 영역 -->
   
   <settings>
   		<!-- null로 데이터 전달 되었으면 NULL로 인식  -->
   		<setting name="jdbcTypeForNull" value="NULL"/>
   		
   </settings>
   
   
   <!-- typeAlias : VO/DTO 클래스의 풀 클래스명을 단순한 클래스 명으로 사용하기 위해 별칭을 등록할 수 있는 영역 -->
   <typeAliases>
   	<!--<typeAlias alias="member" type="com.kh.mybatis.member.model.vo.Member"/>-->
   	<typeAlias alias="board" type="com.kh.mybatis.board.model.vo.Board"/>
   	<typeAlias alias="reply" type="com.kh.mybatis.board.model.vo.Reply"/>
    <typeAlias alias="memebr" type="org.kh.member.model.vo.Member"/>
   </typeAliases>
   
   
   <!-- 
   		enviroments : Mybatis에서 연동할 DB에 대한 정보들을 등록하는 영역(여러개의 DB 정보도 등록 가능)
   		 -> default 속성으로 여러개의 id중 어떤 DB를 기본 DB로 사용할 것인지 설정
   
    -->
   <environments default="development">
   		<environment id="development">
   			<!-- 
   				transactionManager 는 JDBC 와 MANAGED 둘 중 하나 선택 가능한 태그
   				 - JDBC : 트랜잭션 처리를 직접 관리 (수동 COMMIT)
   				 - MANAGED : 트랜잭션 자동 관리 (자동 COMMIT)
   			 -->
   			 <transactionManager type="JDBC"/>
   			 
   			 
   			 <!--
   			 		* datasource 는 POOLED UNPOLLED 둘 중 하나 선택 가능
   			 		 - Connection pool(connection 객체 담아 두는 영역) 사용 여부 설정
   			 		 POOLED : conn pool 사용 (conn 재사용)
   			 		 UNPOLLED : pool 미사용
   			   -->
   			 <dataSource type="POOLED">
  			 	<property name="driver" value="oracle.jdbc.driver.OracleDriver"/>
  			 	<property name="url" value="jdbc:oracle:thin:@localhost:1521:xe"/>
  			 	<property name="username" value="MYBATIS"/>
  			 	<property name="password" value="MYBATIS"/>
   			 	
   			 
   			 </dataSource>
   		
   		
   		</environment>
   		
   
   </environments>
   
      		<!-- mapper : mapper 위치 파일 등록 영역 -->
   		<mappers>
   			<mapper resource="/mappers/member-mapper.xml"/>
   			<mapper resource="/mappers/board-mapper.xml"/>
   		</mappers>
   
   
   
   
   
   
   </configuration>